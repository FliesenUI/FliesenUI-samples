<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:text="Start App"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_appButton"/>

    <Button
        android:text="Start Web Server Activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_webServerActivityButton"/>
    <Button
        android:text="Start Web Server Service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_webServerServiceButton"/>
    <Button
        android:text="Stop Web Server Service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_stopWebServerServiceButton"/>
</LinearLayout>